<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DiagnosTIC Pro â€” DiagnÃ³stico avanzado" Height="800" Width="1400"
        MinHeight="700" MinWidth="1200" WindowStartupLocation="CenterScreen">
  <Window.Resources>
    <Style x:Key="StatCard" TargetType="Border">
      <Setter Property="Background" Value="White"/>
      <Setter Property="BorderBrush" Value="#E0E0E0"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Padding" Value="16"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#F5F5F5"/>
        </Trigger>
      </Style.Triggers>
    </Style>

    <Style TargetType="Button" x:Key="RoundedButton">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="6"
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </Window.Resources>

  <Grid Margin="12" x:Name="gridRoot">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="340" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Panel izquierdo -->
    <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,8,0">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
          <TextBlock Text="ðŸ–¥ï¸ Equipo" FontWeight="Bold" FontSize="14" Margin="0,0,0,8" />
          <TextBox x:Name="txtEquipo" Padding="8" FontSize="13" />
        </StackPanel>

        <Border Grid.Row="1" Height="1" Background="#DDD" Margin="0,16,0,16"/>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
          <StackPanel>
            <TextBlock Text="ðŸ“‹ AnÃ¡lisis disponibles" FontWeight="Bold" FontSize="14" Margin="0,0,0,12" />
            <TreeView x:Name="treeAnalisis" BorderThickness="0" Background="Transparent" />
          </StackPanel>
        </ScrollViewer>

        <!-- EstadÃ­sticas clicables -->
        <StackPanel Grid.Row="3" Margin="0,12,0,12">
          <TextBlock Text="ðŸ“Š Filtrar por estado:" FontSize="12" Foreground="#666" Margin="0,0,0,8"/>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="borderStatOK" Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,4,0">
              <StackPanel HorizontalAlignment="Center">
                <TextBlock x:Name="txtStatsOK" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                <TextBlock Text="OK" FontSize="11" Foreground="#666" HorizontalAlignment="Center"/>
              </StackPanel>
            </Border>

            <Border x:Name="borderStatWarning" Grid.Column="1" Style="{StaticResource StatCard}" Margin="2,0,2,0">
              <StackPanel HorizontalAlignment="Center">
                <TextBlock x:Name="txtStatsWarning" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                <TextBlock Text="Avisos" FontSize="11" Foreground="#666" HorizontalAlignment="Center"/>
              </StackPanel>
            </Border>

            <Border x:Name="borderStatError" Grid.Column="2" Style="{StaticResource StatCard}" Margin="4,0,0,0">
              <StackPanel HorizontalAlignment="Center">
                <TextBlock x:Name="txtStatsError" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                <TextBlock Text="Errores" FontSize="11" Foreground="#666" HorizontalAlignment="Center"/>
              </StackPanel>
            </Border>
          </Grid>

          <TextBlock x:Name="txtFilterStatus" Text="Mostrando: Todos los resultados" FontSize="11" Foreground="#666"
                     Margin="0,8,0,0" HorizontalAlignment="Center" FontStyle="Italic"/>
        </StackPanel>

        <Button Grid.Row="4" x:Name="btnRun" Content="â–¶ï¸ Ejecutar anÃ¡lisis"
                Background="#2196F3" Foreground="White"
                Height="44" FontSize="14" FontWeight="Bold"
                BorderThickness="0" Cursor="Hand" Style="{StaticResource RoundedButton}"/>
      </Grid>
    </Border>

    <!-- Panel derecho -->
    <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="8,0,0,0">
      <Grid x:Name="gridRight">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
          <TextBlock Text="ðŸ“Š Resultados del diagnÃ³stico" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
          <Button x:Name="btnClear" Content="ðŸ—‘ï¸ Limpiar" Margin="16,0,0,0"
                  Padding="12,6" Background="#F5F5F5"
                  BorderBrush="#DDD" BorderThickness="1" Cursor="Hand"
                  Style="{StaticResource RoundedButton}"/>
        </StackPanel>

        <!-- Resultados -->
        <Border Grid.Row="1" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="16">
          <RichTextBox x:Name="rtbResults"
                       IsReadOnly="True"
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Segoe UI"
                       FontSize="13"
                       IsDocumentEnabled="True"
                       VerticalScrollBarVisibility="Auto"/>
        </Border>

        <Border Grid.Row="2" Height="1" Background="#E0E0E0" Margin="0,16,0,16"/>

        <!-- Log tÃ©cnico -->
        <Grid Grid.Row="3" x:Name="gridLog">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="ðŸ”§ Log tÃ©cnico" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <Button x:Name="btnToggleLog" Content="â¬‡ï¸ Contraer" Margin="12,0,0,0"
                    Padding="8,4" Background="Transparent" BorderBrush="#DDD"
                    BorderThickness="1" FontSize="11" Cursor="Hand"
                    Style="{StaticResource RoundedButton}"/>
          </StackPanel>

          <Border Grid.Row="1" x:Name="borderLog" Background="#F5F5F5" CornerRadius="6" Padding="12"
                  BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
              <TextBox x:Name="txtLog" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True"
                       Background="Transparent" BorderThickness="0"
                       FontFamily="Consolas" FontSize="11"/>
            </ScrollViewer>
          </Border>
        </Grid>
      </Grid>
    </Border>
  </Grid>
</Window>
